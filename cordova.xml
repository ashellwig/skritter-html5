<?xml version='1.0' encoding='utf-8'?>

<widget id="{!application-id!}"
        version="{!application-version!}"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

  <name>{!application-name!}</name>

  <description>
    Learn to write Chinese and Japanese characters.
  </description>

  <author email="team@skritter.com" href="https://www.skritter.com/">
    Inkren, Inc.
  </author>

  <content src="cordova.html" />

  <plugin name="cordova-plugin-whitelist" spec="1" />

  <access origin="*" />

  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <preference name="BackgroundColor" value="0xffffffff" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="FadeSplashScreenDuration" value="100"/>
  <preference name="Fullscreen" value="false" />
  <preference name="Orientation" value="portrait" />
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="SplashMaintainAspectRatio" value="true" />

  <platform name="android">
    <allow-intent href="market:*" />
    <preference name="Orientation" value="portrait"/>
    <icon src="../res/{!application-language!}/android/icon/ldpi.png" density="ldpi" />
    <icon src="../res/{!application-language!}/android/icon/mdpi.png" density="mdpi" />
    <icon src="../res/{!application-language!}/android/icon/hdpi.png" density="hdpi" />
    <icon src="../res/{!application-language!}/android/icon/xhdpi.png" density="xhdpi" />
    <splash src="../res/{!application-language!}/android/screen/port-ldpi.png" density="port-ldpi"/>
    <splash src="../res/{!application-language!}/android/screen/port-mdpi.png" density="port-mdpi"/>
    <splash src="../res/{!application-language!}/android/screen/port-hdpi.png" density="port-hdpi"/>
    <splash src="../res/{!application-language!}/android/screen/port-xhdpi.png" density="port-xhdpi"/>
  </platform>

  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>

  <engine name="android" spec="~6.1.0" />
  <engine name="ios" spec="~4.3.0" />

</widget>
