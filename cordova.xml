<?xml version='1.0' encoding='utf-8'?>

<widget id="{!application-id!}"
        version="{!application-version!}"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

  <name>{!application-name!}</name>

  <description>
    Learn to write Chinese and Japanese characters.
  </description>

  <author email="team@skritter.com" href="https://skritter.com">
    Inkren, Inc.
  </author>

  <content src="cordova.html" />

  <plugin name="cordova-plugin-whitelist" spec="1" />

  <access origin="*" />

  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="BackgroundColor" value="0xff262b30" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="FadeSplashScreenDuration" value="100"/>
  <preference name="Fullscreen" value="false" />
  <preference name="Orientation" value="portrait" />
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="StatusBarBackgroundColor" value="#262b30" />

  <platform name="android">
    <allow-intent href="market:*" />
    <icon src="../res/{!application-language!}/android/icon/ldpi.png" density="ldpi" />
    <icon src="../res/{!application-language!}/android/icon/mdpi.png" density="mdpi" />
    <icon src="../res/{!application-language!}/android/icon/hdpi.png" density="hdpi" />
    <icon src="../res/{!application-language!}/android/icon/xhdpi.png" density="xhdpi" />
    <splash src="../res/{!application-language!}/android/screen/port-ldpi.png" density="port-ldpi" />
    <splash src="../res/{!application-language!}/android/screen/port-mdpi.png" density="port-mdpi" />
    <splash src="../res/{!application-language!}/android/screen/port-hdpi.png" density="port-hdpi" />
    <splash src="../res/{!application-language!}/android/screen/port-xhdpi.png" density="port-xhdpi" />
    <splash src="../res/{!application-language!}/android/screen/port-xxhdpi.png" density="port-xxhdpi" />
    <splash src="../res/{!application-language!}/android/screen/port-xxxhdpi.png" density="port-xxxhdpi" />
  </platform>

  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <icon src="../res/{!application-language!}/ios/icon/icon-29.png" width="29" height="29" />
    <icon src="../res/{!application-language!}/ios/icon/icon-29@2x.png" width="58" height="58" />
    <icon src="../res/{!application-language!}/ios/icon/icon-40.png" width="40" height="40" />
    <icon src="../res/{!application-language!}/ios/icon/icon-40@2x.png" width="80" height="80" />
    <icon src="../res/{!application-language!}/ios/icon/icon-50.png" width="50" height="50" />
    <icon src="../res/{!application-language!}/ios/icon/icon-50@2x.png" width="100" height="100" />
    <icon src="../res/{!application-language!}/ios/icon/icon-57.png" width="57" height="57" />
    <icon src="../res/{!application-language!}/ios/icon/icon-57@2x.png" width="114" height="114" />
    <icon src="../res/{!application-language!}/ios/icon/icon-60.png" width="60" height="60" />
    <icon src="../res/{!application-language!}/ios/icon/icon-60@2x.png" width="120" height="120" />
    <icon src="../res/{!application-language!}/ios/icon/icon-60@3x.png" width="180" height="180" />
    <icon src="../res/{!application-language!}/ios/icon/icon-72.png" width="72" height="72" />
    <icon src="../res/{!application-language!}/ios/icon/icon-72@2x.png" width="144" height="144" />
    <icon src="../res/{!application-language!}/ios/icon/icon-76.png" width="76" height="76" />
    <icon src="../res/{!application-language!}/ios/icon/icon-76@2x.png" width="152" height="152" />
    <icon src="../res/{!application-language!}/ios/icon/icon-83.5@2x.png" width="167" height="167" />
  </platform>

  <engine name="android" spec="6.2.3" />
  <engine name="ios" spec="4.4.0" />

</widget>
