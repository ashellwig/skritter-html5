gelato-page(data-name="login")
  gelato-navbar.theme-marketing.fixed-top
    .container-fluid
      .container
        .left
          .item.item-header(data-url="#")
            //i.fa.fa-chevron-left
            | Login
  gelato-content
    #section-main.content-block
      .text-center.text-danger
        #response-message
      form#login-form.form-horizontal
        .form-group
          label.col-sm-2.control-label(for="login-username") Username
          .col-sm-10
            input#login-username.form-control(type="text", placeholder="")
        .form-group
          label.col-sm-2.control-label(for="login-password") Password
          .col-sm-10
            input#login-password.form-control(type="password", placeholder="")
        .text-center
          button#login-submit.btn.btn-success(type="submit") Log In
      #password-reset.text-center
        a(href="#", data-url="password-reset") Password reset
    #footer-container