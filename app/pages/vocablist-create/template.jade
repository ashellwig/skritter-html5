gelato-page(data-name='vocablist-create')

  #navbar-container

  section.container
    .content-block

      a.back-link(href="/vocablists/browse")
        span.glyphicon.glyphicon-chevron-left
        span cancel and go back

      .title Create a new list

      hr

      form#new-list-form.form
        .form-group
          label.header(for="#name") Name
          input#name.form-control(name='name', value='')

        .form-group
          label.header(for="#list-size") List Size
          br
          label.radio-inline
            input#small-list-input(type="radio" name="list-size")
            | Small list

          label.radio-inline
            input#large-list-input(type="radio" name="list-size" checked=true)
            | Big list (multiple sections, e.g.,: Chapter 1, Chapter 2, etc)

        .form-group
          label.header(for="#description") Description (optional)
          textarea#description.form-control(name='description')

        #submit-area
          if view.errorMessage
            .alert.alert-danger= view.errorMessage

          button#create-list-btn.btn.btn-success.btn-fixed(type="submit")
            if view.vocablist.state === 'saving'
              i.fa.fa-1x.fa-spinner.fa-pulse
            else
              | Create list