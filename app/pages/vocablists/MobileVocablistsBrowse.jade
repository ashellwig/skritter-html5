gelato-page(data-name='mobile-vocablists-browse')

  #dialog-container

  section#vocablist-nav-links.container
    .row.text-center
      .col-xs-6
        a(href='/vocablists/queue') Queue
      .col-xs-6
        a(href='/vocablists/browse') Browse

    .row.text-center
      .col-xs-4
        a(href='/vocablists/my-lists') My Lists
      .col-xs-4
        a(href='/vocablists/chinesepod') ChinesePod
      .col-xs-4
        a(href='/vocablists/deleted') Deleted

  section.container
    #expiration-container
    .content-block
      .row

        .col-md-12.main-content
          .title Browse Lists
          #table-options
            .row
              .col-md-10
                .input-group.input-group-lg
                  span.input-group-addon
                    i.fa.fa-search
                  input#list-search-input.form-control(type="text", placeholder="Type to search by title")
              .col-md-1
                span#list-option.glyphicon.glyphicon-th-list.layout-selector.chosen
              .col-md-1
                span#grid-option.glyphicon.glyphicon-th-large.layout-selector
            // TODO: support checkbox filters
            //- .form-inline
              label View only:
              .checkbox
                label
                  input#textbooks(type="checkbox" name='textbooks')
                  span Textbooks
              .checkbox
                label
                  input#other-official-lists(type="checkbox" name='other-official')
                  span Other official lists
          #vocablist-container
