gelato-component(data-name='prompt-vocab-definition')
  - var prompt = view.prompt
  - var reviews = view.prompt.reviews

  if reviews
    - var definition = reviews.vocab.getDefinition()
    - var review = reviews.current();

    label Definition

    case prompt.part

      when 'defn'
        .value(class=(reviews.isComplete() ? 'visible' : 'invisible'))
          if view.editable
            textarea= definition
          else
            if definition
              span!= definition
            else
              em Click the 'edit' icon to add a definition

      default
        .value
          if view.editable
            textarea= definition
          else
            if definition
              if review.isDefinitionHidden()
                button#show-definition.btn.btn-sm.btn-default show
              else
                span!= definition
            else
              em Click the 'edit' icon to add a definition
