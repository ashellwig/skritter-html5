gelato-component(data-name='prompt-canvas-definition')
  - var prompt = view.prompt
  - var reviews = view.prompt.reviews

  if prompt.part === 'defn' && reviews

    if (app.isChinese())
      .writing.text-chinese= reviews.vocab.get('writing')
    else
      .writing.text-japanese= reviews.vocab.get('writing')

    if reviews.isComplete()
      .answer!= reviews.vocab.getDefinition()
    else
      .question What's the definition?
