gelato-component(data-name="study-prompt-toolbar-action")
  - var prompt = view.prompt;

  if prompt.review
    .btn-wrapper(role="group")
      button#toolbar-stroke-order.btn.btn-default(type="button")
        i.icon.icon-study-stroke-order(class=view.buttonTeach ? '' : 'disabled')
    .btn-wrapper(role="group")
      button#toolbar-erase.btn.btn-default(type="button")
        i.icon.icon-study-erase(class=view.buttonErase ? '' : 'disabled')
    .btn-wrapper(role="group")
      button#toolbar-show.btn.btn-default(type="button")
        i.icon.icon-study-show(class=view.buttonShow ? '' : 'disabled')
    .btn-wrapper(role="group")
      button#toolbar-correct.btn.btn-default(type="button")
        if prompt.review.get('score') > 1
          i.icon.icon-study-correct(class=view.buttonCorrect ? '' : 'disabled')
        else
          i.icon.icon-study-incorrect(class=view.buttonCorrect ? '' : 'disabled')
