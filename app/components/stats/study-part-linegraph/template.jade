gelato-component(data-name='stats-study-part-linegraph')
  .row.hidden-md.hidden-lg
    - var title = view.part === 'rune' ? 'Writing' : view.part === 'rdng' ? 'Reading' : view.part === 'defn' ? 'Definition' : 'Tone';
    #graph-title.graph-title #{title}
  .row
    .col-md-9.col-xs-9
      #linegraph
    .col-md-3.col-xs-3
      .num.num-learned#num-learned ...
  .row
    .col-md-4.col-xs-4
      .num-label Added
      .num#num-added ...
    .col-md-4.col-xs-4
      .num-label Reviews
      .num#num-reviews ...
    .col-md-4.col-xs-4
      .num-label Retention
      .num#num-retention ...
