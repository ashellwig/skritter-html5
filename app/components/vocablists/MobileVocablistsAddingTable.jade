gelato-component(data-name='mobile-vocablists-adding-table')

  for list in view.vocablists.getAdding()
    .row(data-list-id=list.id)
      .col-xs-6.name-wrapper
        a.vocablist-title(href="/vocablists/view/" + list.id)= list.get('name')

      .col-xs-6
        .col-xs-4.stop-adding-link
          i.glyphicon.glyphicon-pause
        .col-xs-4.list-settings-span.text-right
          i.glyphicon.glyphicon-cog
        .col-xs-4.remove-list-span.text-right
          i.glyphicon.glyphicon-remove
      .col-xs-12.process-wrapper
        .progress
          .progress-bar(style="width:" + (list.getProgress().percent) + '%')

  if view.vocablists.state === 'fetching'
    p.text-center
      i.fa.fa-3x.fa-spinner.fa-pulse

  else if !view.vocablists.getAdding().length
    span You are not currently adding words from any lists. Why not
      a(href="vocablists/browse") &nbsp;browse for new lists
      | ?
