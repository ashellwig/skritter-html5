gelato-component(data-name='vocablist-review-table')
  if view.vocablists.state === 'fetching'
    p.text-center
      i.fa.fa-3x.fa-spinner.fa-pulse

  else if view.vocablists.length
    for list, i in view.vocablists.getReviewing()
      .row(data-list-id=list.id)
        .col-md-3
          a(href="/vocablist/view/"+list.id)= list.get('name')
        .col-md-3
          .progress
            .progress-bar(style="width:"+(list.getProgress().percent)+'%')

        .col-md-2
          a.action-link(href="/study/"+list.id) Study List

        .col-md-2
          if list.get('studyingMode') === 'reviewing'
            a.action-link.restart-adding-link Restart Adding
          if list.get('studyingMode') === 'finished'
            span Finished

        .col-md-1
          span.glyphicon.glyphicon-cog.list-settings-span

        .col-md-1
          span.glyphicon.glyphicon-remove.remove-list-span

  else
    em None
